<div class="all-page">
  <div class="vertical-banner">

    <h2>Cocktail Club</h2>
    <h3>IT'S TIME FOR ...</h3>
    <h1>COCKTAILS</h1>
    <div class="glass">
      <%= image_tag('cocktail.png') %>
    </div>
  </div>

    <div class="all-cocktails">
      <% @cocktails.each do |cocktail| %>
      <% case cocktail.name %>
      <% when "Mojito" %>
        <p><%= image_tag('mojito.png') %> <%= cocktail.name %> </p>
      <% when "Cuba Libre" %>
        <p><%= image_tag('cubalibre.png') %><%= cocktail.name %></p>
      <% when "Pina Colada" %>
        <p> <%= image_tag('pinacolada.png') %><%= cocktail.name %></p>
      <% when "Magarita" %>
        <p><%= image_tag('margarita.png') %><%= cocktail.name %></p>
      <% else %>
        <p><%= image_tag('martini.png') %><%= cocktail.name %></p>
      <% end %>
  <% end %>
  </div>
</div>

